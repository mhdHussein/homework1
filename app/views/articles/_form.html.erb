<%	if @article.errors.any?  %>
    <h3>the following errors occured!</h3>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
      <% end %>
    </ul>
<%	end  %>

<div class="row">
  <div class="col-md-12">

    <%= form_for @article , :html => {class: "form-horizontal", role: "form"} do |f| %>

        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :title	  %>
          </div>
          <div class="col-sm-8">
            <%=	f.text_field :title , class: "form-control", placeholder: "title of the article".capitalize!, autofocus: true  %>
          </div>
        </div>


        <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :description	  %>
          </div>
          <div class="col-sm-8">
            <%=	f.text_area :description, rows:10 , class:"form-control", placeholder:"Body of the article".capitalize! %>
          </div>

        </div>

        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-8">
              <%= f.submit class: "btn btn-primary"	  %>
            </div>
        </div>


    <% end %>

  </div>
</div>

<div class="col-xs-4 col-xs-offset-4">
  [ <%= link_to 'cancel and return to blog listing'.capitalize!, articles_path %> ]
</div>
